<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGray"
    >

    <include
        android:id="@+id/head_percenter"
        layout="@layout/app_title"
        />

    <LinearLayout
        android:id="@+id/ll_percenter_normal"
        android:layout_marginTop="@dimen/space_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/white"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/gray3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/image_gongsi"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/space_10"
                />
            <TextView
                android:id="@+id/tv_normal_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司名称:萌蛋电子商务有限公司"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginBottom="@dimen/space_20"
                android:textColor="@color/gray4"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/gray3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/image_dengji"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/space_10"
                />

            <TextView
                android:id="@+id/tv_normal_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等级:二级分销商"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginBottom="@dimen/space_20"
                android:textColor="@color/gray4"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/gray3"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/image_zhekou"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/space_10"
                />

            <TextView
                android:id="@+id/tv_normal_zhekou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折扣:九五折"
                android:textSize="@dimen/text_size_16"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginBottom="@dimen/space_20"
                android:textColor="@color/gray4"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1"
            android:background="@color/gray3"
            />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/image_center_phone"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/space_10"
            />

        <TextView
            android:id="@+id/tv_normal_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号:18915581676"
            android:textSize="@dimen/text_size_16"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginBottom="@dimen/space_20"
            android:textColor="@color/gray4"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_1"
        android:background="@color/gray3"
        />
    </LinearLayout>
</LinearLayout>