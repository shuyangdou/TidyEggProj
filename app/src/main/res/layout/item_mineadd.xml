<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_5"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_marginRight="@dimen/space_10"
            android:layout_marginTop="@dimen/space_5"
            android:layout_weight="4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_item_mineaddname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="某某某"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:id="@+id/tv_item_mineaddphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="15000000000"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/text_size_16" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_mineadd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_weight="7"
                    android:text="上海市虹口区广纪路766号B栋 5楼 501室"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/tv_item_mineaddmoren"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_5"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_weight="2"
                    android:text="默认"
                    android:textColor="@color/gray3"
                    android:textSize="@dimen/text_size_14"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_addmodify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/image_mineadd_modify"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>