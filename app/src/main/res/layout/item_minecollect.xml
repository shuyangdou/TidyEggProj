<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_collectpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_15"
        android:src="@mipmap/image_shoucang" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_collectname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="狼山鸡蛋+AAA级"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="@dimen/space_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定金:"
                android:textColor="@color/gray3"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_marginTop="@dimen/space_8"
                android:id="@+id/tv_collectdeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1200元/箱"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:text="售价:"
                android:textColor="@color/gray3"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tv_collectpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:text="60元/箱"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>