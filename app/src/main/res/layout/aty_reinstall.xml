<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/head_reinstall"
        layout="@layout/app_title"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置新密码"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/gray4"
            />

        <EditText
            android:id="@+id/ed_newpassword"
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入新密码(6-16个字符)"
            android:textSize="@dimen/text_size_14"
            android:background="@mipmap/image_shuru"
            android:paddingLeft="@dimen/space_10"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/gray4"
            />

        <EditText
            android:id="@+id/ed_commit_newpassword"
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请再次输入新密码"
            android:textSize="@dimen/text_size_14"
            android:background="@mipmap/image_shuru"
            android:paddingLeft="@dimen/space_10"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/gray4"
        android:background="@drawable/shape_btn_redback"
        android:padding="@dimen/space_10"
        />
</LinearLayout>