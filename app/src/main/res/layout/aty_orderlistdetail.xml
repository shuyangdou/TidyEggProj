<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleGray"
    android:orientation="vertical">

    <include
        android:id="@+id/head_orderlistdetail"
        layout="@layout/app_title" />

    <ScrollView
        android:id="@+id/sv_orderdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/eggcolor"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_orderdetail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginTop="@dimen/space_5"
                    android:text="等待买家付款"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_detail_paywithfreight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/space_5"
                    android:layout_marginLeft="@dimen/space_15"
                    android:layout_marginTop="@dimen/space_5"
                    android:text="订单金额:"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/image_orderdetail_weizhi"
                        android:layout_gravity="center_vertical"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_8">

                            <TextView
                                android:id="@+id/tv_detail_receiver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="收货人:李先生"
                                android:textColor="@color/gray3"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/tv_detail_receivephone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="收货人号码:13843237569"
                                android:textColor="@color/gray3"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_detail_receiveadd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_8"
                            android:text="收货地址:上海市虹口区广济路760号B栋-503"
                            android:textSize="@dimen/text_size_15"
                            android:textColor="@color/gray3"
                            />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/view_wuli"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/common_bg_press" />

                <LinearLayout
                    android:id="@+id/ll_detail_wulixinxi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/image_orderdetail_wuli"
                        android:layout_gravity="center_vertical"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:orientation="vertical"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_8">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="物流信息:"
                                android:textColor="@color/gray3"
                                android:textSize="@dimen/text_size_15" />

                            <TextView
                                android:id="@+id/tv_detail_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="2016/10/19  15:28:01"
                                android:textColor="@color/gray3"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_detail_mess"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/space_8"
                            android:text="静安（本部），安排投递，操作员：王军均"
                            android:textSize="@dimen/text_size_15"
                            android:textColor="@color/gray3"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_detail_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/red"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/common_bg_press" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_detail_goods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="@color/paleGray"
                    android:paddingLeft="@dimen/space_2"
                    android:paddingRight="@dimen/space_2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_1"
                    android:background="@color/common_bg_press" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space_8">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实付款:"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/tv_detail_freightpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="￥00.00:"
                            android:textColor="@color/red"
                            android:textSize="@dimen/text_size_14" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/white"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_detail_orderlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="@color/paleGray"
                    android:paddingLeft="@dimen/space_2"
                    android:paddingRight="@dimen/space_2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_detail_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_detailbtn_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn_back"
                    android:gravity="center"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/gray3" />

                <TextView
                    android:id="@+id/tv_detailbtn_night"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_btn_redback"
                    android:gravity="center"
                    android:padding="@dimen/space_10"
                    android:textColor="@color/eggcolor" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>