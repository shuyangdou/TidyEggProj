<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/head_newaddress"
        layout="@layout/app_title"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="联系人姓名:"
            android:textSize="@dimen/text_size_17"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/ed_newaddress_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:hint="请输入你的真实姓名"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/space_10"
            android:background="@mipmap/image_shuru"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginBottom="@dimen/space_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="手机号码:"
            android:textSize="@dimen/text_size_17"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/ed_newaddress_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:hint="11位手机号码"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/space_10"
            android:background="@mipmap/image_shuru"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_select_address"
        android:layout_marginTop="@dimen/space_15"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择省、市、区"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/gray4"
        android:gravity="center"
        android:paddingTop="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        android:background="@drawable/shape_btn_redback"
        />

    <LinearLayout
        android:layout_margin="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_provinces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="省份:"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_city"
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="城市:"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/tv_county"
            android:layout_marginTop="@dimen/space_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="区县:"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="街道:"
            android:textSize="@dimen/text_size_17"
            android:layout_gravity="center_vertical"
            />

        <EditText
            android:id="@+id/ed_street"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:hint="请输入"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/space_10"
            android:background="@mipmap/image_shuru"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_15"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_marginRight="@dimen/space_15"
        >
        <CheckBox
            android:id="@+id/cb_moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_marginLeft="@dimen/space_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16"
            android:text="设为默认地址"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_newaddress_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_15"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/btn_newaddress_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/gray4"
            android:layout_gravity="center_horizontal"
            android:background="@color/eggcolor"
            />
    </LinearLayout>

</LinearLayout>