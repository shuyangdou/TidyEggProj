<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <include
        android:id="@+id/head_modifypass"
        layout="@layout/app_title"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码:"
            android:textColor="@color/gray4"
            android:textSize="@dimen/text_size_16"
            />

        <EditText
            android:id="@+id/ed_oldpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:hint="请输入原密码(6-16个字符)"
            android:background="@mipmap/image_shuru"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/space_10"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码:"
            android:textColor="@color/gray4"
            android:textSize="@dimen/text_size_16"
            />

        <EditText
            android:id="@+id/ed_newpass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:hint="请输入新密码(6-16个字符)"
            android:background="@mipmap/image_shuru"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/space_10"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码:"
            android:textColor="@color/gray4"
            android:textSize="@dimen/text_size_16"
            />

        <EditText
            android:id="@+id/ed_commit_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:hint="请输入密码(6-16个字符)"
            android:background="@mipmap/image_shuru"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/space_10"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_modifypass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:text="确认"
        android:textSize="@dimen/text_size_16"
        android:textColor="@color/gray4"
        android:background="@color/eggcolor"
        android:padding="@dimen/space_10"
        />
</LinearLayout>