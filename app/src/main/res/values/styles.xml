<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FFFFD600</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTitle</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="mTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>

    <!-- ratingbar -->
    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_drawable</item>
        <item name="android:minHeight">28dip</item>
        <item name="android:maxHeight">28dip</item>
    </style>

</resources>
